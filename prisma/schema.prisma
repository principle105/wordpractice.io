datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  id          String    @id @map("_id")
  name        String
  email       String    @unique
  provider    String
  avatar      String
  rating      Int
  fontScale   Int
  authSession Session[]
  key         Key[]

  @@index([id, email, provider])
}

model Session {
  id        String   @id @map("_id")
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@index([userId])
}

model Key {
  id              String  @id @map("_id")
  hashed_password String?
  user_id         String
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

generator client {
  provider = "prisma-client-js"
}
